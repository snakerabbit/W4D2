<h1>Add A New Rental Request</h1>

<form action= "<%= cat_rental_requests_url %>" method="post">
  <label for="Cat">Cat: </label>
  <select id="Cat" name="cat_rental_request[cat_id]">
    <option disabled selected>--Please Select Cat--</option>
    <% Cat.all.each do |cat| %>
        <option value= <%= cat.id %> > <%= cat.name %> </option>
    <% end %>
  </select>

  <br>

  <label for="Start Date">Start Date: </label>
  <input type="date" name="cat_rental_request[start_date]">

  <label for="End Date">End Date: </label>
  <input type="date" name="cat_rental_request[end_date]">


  <input type="submit" value="Submit Request">
</form>

